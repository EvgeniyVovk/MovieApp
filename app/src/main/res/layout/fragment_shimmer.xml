<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<com.facebook.shimmer.ShimmerFrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/shimmer_view_container"
    android:background="@color/backgroundColor"
    android:padding="12dp"
    tools:context=".ui.widgets.ShimmerFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <include
                android:id="@+id/placeholder_movie_layout_1"
                layout="@layout/placeholder_movie_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>
            <include
                android:id="@+id/placeholder_movie_layout_2"
                layout="@layout/placeholder_movie_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />
            <include
                android:id="@+id/placeholder_movie_layout_3"
                layout="@layout/placeholder_movie_layout"
                android:layout_marginTop="@dimen/space_3x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/placeholder_movie_layout_1"/>
            <include
                android:id="@+id/placeholder_movie_layout_4"
                layout="@layout/placeholder_movie_layout"
                android:layout_marginTop="@dimen/space_3x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/placeholder_movie_layout_2"/>
    </RelativeLayout>

</com.facebook.shimmer.ShimmerFrameLayout>
</ScrollView>