<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_1x"
    app:cardCornerRadius="@dimen/space_2x"
    app:cardBackgroundColor="@color/backgroundColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView_actors_movie"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:src="@drawable/image_actor_robert_downey_jr"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/textView_actors_movie_name"/>

        <TextView
            android:id="@+id/textView_actors_movie_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Robert Downey Jr."
            android:gravity="center"
            android:maxLines="2"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/actorNameTextColor"
            android:layout_marginTop="@dimen/space_2x"
            android:layout_marginBottom="@dimen/space_2x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView_actors_movie"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>